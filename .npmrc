# pnpm configuration
# Use strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Shamefully hoist (for Next.js compatibility)
shamefully-hoist=true

# Public hoist pattern for better compatibility
public-hoist-pattern[]=*@clerk/*
public-hoist-pattern[]=*@supabase/*
public-hoist-pattern[]=*@radix-ui/*

# Save exact versions
save-exact=false
